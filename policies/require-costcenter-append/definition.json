{
  "properties": {
    "displayName": "Add CostCenter tag (Modify)",
    "policyType": "Custom",
    "mode": "All",
    "description": "Ensures all resources/resource groups have a CostCenter tag; adds it when missing.",
    "parameters": {
      "tagName": {
        "type": "String",
        "defaultValue": "CostCenter"
      },
      "tagValue": {
        "type": "String",
        "defaultValue": "Unknown"
      }
    },
    "policyRule": {
      "if": {
        "anyOf": [
          {
            "field": "type",
            "equals": "Microsoft.Resources/subscriptions/resourceGroups"
          },
          {
            "field": "[concat('tags[', parameters('tagName'), ']')]",
            "exists": "false"
          }
        ]
      },
      "then": {
        "effect": "modify",
        "details": {
          "roleDefinitionIds": [
            "/providers/Microsoft.Authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
          ],
          "operations": [
            {
              "operation": "addOrReplace",
              "field": "[concat('tags[', parameters('tagName'), ']')]",
              "value": "[parameters('tagValue')]"
            }
          ]
        }
      }
    }
  }
}
